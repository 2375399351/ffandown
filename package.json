    "pkg": "pkg ./ --debug=true",
    "gulp": "gulp",
    "auto": "bash ./build.sh",
    "build": "npm run clean && npm run pkg",
    "rmi": "docker rmi h55205l/ffandown:latest",
    "build:dockerimage": "docker build . -t h55205l/ffandown:latest",
