  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.1",
    "colors": "^1.4.0",
    "download": "^8.0.0",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.1.0",
    "gulp-html-minifier-terser": "^7.1.0",
    "js-yaml": "^4.1.0",
    "pidusage": "^3.0.2",
    "request": "^2.88.2",
    "systeminformation": "^5.17.12",
    "winston": "^3.8.2",
    "yamljs": "^0.3.0"
  },
  "pkg": {
    "scripts": [
      "index.js",
      "bootstrap.js",
      "./bin/*.js",
      "./bin/utils/*.js"
    ],
    "assets": [
      "./public/**/*",
      "./public/*",
      "./runtime/**/*.js",
      "./runtime/**/**/*.js",
      "./runtime/*.js"
    ],
    "targets": [
      "node14-macos-x64",
      "node14-windows-x64",
      "node14-linux-x64"
